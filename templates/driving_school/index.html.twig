{% extends 'base.html.twig' %}

{% block title %}DrivingSchool index{% endblock %}

{% block body %}
    <nav class="bg-white border-gray-200 dark:bg-gray-900">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
            <a href="#" class="flex items-center space-x-3 rtl:space-x-reverse">
                <span class=" material-symbols-outlined dark:text-white"> directions_car </span>
                <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">AE-Technologies</span>
            </a>
            {% embed 'composants/_buttonNav.html.twig' with {href: '/logout'} %}
                {% block p %}Se déconnecter{% endblock %}
            {% endembed %}
            <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-cta">
                <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
                    <li>
                        <a href="#" class="block py-2 px-3 md:p-0 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:dark:text-blue-500" aria-current="page">Accueil</a>
                    </li>
                    <li>
                        <a href="#"
                           class="block py-2 px-3 md:p-0 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700">Nos
                            Service</a>
                    </li>
                    <li>
                        <a href="#"
                           class="block py-2 px-3 md:p-0 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 d:dark:hover:text-blue-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700">Qui
                            sommes nous ?</a>
                    </li>
                    <li>
                        <a href="#"
                           class="block py-2 px-3 md:p-0 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section class="bg-gray-100 dark:bg-gray-900">
        <div class="flex items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
            <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
                <div class="p-6 space-y-10 md:space-y-10 sm:p-8 ">
                    <h3 class="text-5xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                        Vos auto-écoles :
                    </h3>
                    {% for driving_school in driving_schools %}
                        <div class="max-w-sm bg-white border mb-4 border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 mb-4">
                            <a href="#">
                                <img class="rounded-t-lg" src="{{ asset('assets/images/driving-school.png') }}" alt=""/>
                            </a>
                            <div class="p-5 mb-4">
                                <a href="{{ path('app_driving_school_show', {'id': driving_school.id}) }}">
                                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ driving_school.name }}</h5>
                                </a>
                                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">Adresse : {{ driving_school.address }}</p>
                                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">N° de Siret : {{ driving_school.siret }}</p>
                                <div class="flex items-center justify-items-center">
                                    <a href="{{ path('app_driving_school_show', {'id': driving_school.id}) }}">
                                        <button class="me-4 mt-6 flex justify-center rounded-md bg-orange-600  px-10 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-orange-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600 dark:bg-violet-900 dark:hover:bg-violet-800 dark:focus-visible:outline-violet-700"
                                                type="submit">
                                            Gérer
                                        </button>
                                    </a>
                                    <a href="{{ path('app_driving_school_edit', {'id': driving_school.id}) }}">
                                        <button class="mt-6 flex w-full justify-center rounded-md bg-orange-600 px-10 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-orange-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600 dark:bg-violet-900 dark:hover:bg-violet-800 dark:focus-visible:outline-violet-700"
                                                type="submit">
                                            Editer
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    <div>
                        <a class="text-orange-400 dark:text-indigo-400 mt-4" href="{{ path('app_driving_school_new') }}">
                            Pas d'auto-école ?
                            <button class="mt-3 flex w-full justify-center rounded-md bg-orange-600 px-10 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-orange-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600 dark:bg-violet-900 dark:hover:bg-violet-800 dark:focus-visible:outline-violet-700"
                                    type="submit">
                                Creer la votre
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}